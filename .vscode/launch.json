    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Lancer le programme",
            "program": "${file}",
            "args": [
                "-list_request",
                "SELECT * FROM dba_tables WHERE OWNER = 'GREFFIER'",
                "-schema_map",
                "*:gagi2",
                "-truncate"
            ],
            "outFiles": [
                "${workspaceFolder}/bin/*.js",
                "${workspaceFolder}/setup/node_modules/**/*.js"
            ], 
            "env": {
                "NODE_PATH": "${workspaceFolder}\\setup\\node_modules"
            }
        }
    ]
}